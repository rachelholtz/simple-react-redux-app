// Global Styles
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,600&display=swap');
@import url('../vendor/fontawesome/solid.min.css');

body
  font-family: 'Montserrat', sans-serif;

  h1, h2, h3
    font-weight: 600

  p
    font-weight: 300

  a
    color: #f6aeb1
    transition: 0.3s ease all

    &:hover
      color: rgba(0,0,0,0.6)
      text-decoration: none

  span.heart-emoji
    color: red
    margin-right: 2px

  button
    border-radius: 6px;
    box-shadow: inset 0 -4px 3px 0 rgba(0,0,0,.3);
    padding: 3px 10px 7px

    &:hover
      background-color: red
      transition: 0.3s ease all

      span
        color: white