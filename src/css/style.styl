// Import all partials
@import './_*.styl'

body
  margin: 0

  .o-container
    display: flex
    flex-direction column
    justify-content: space-between
    font-family: sans-serif;
    height 100vh
    width 100%

  .not-found-container
    display flex
    flex-direction: column
    align-items: center
    justify-content: center
    height: 100vh
    text-align: center

    h1
      color #74a089
      font-family: sans-serif
      font-size: 50px;
      text-align: center
      text-transform: uppercase

    .button
      background: #9a8822
      border 2px solid #9a8822
      color #fff
      display: block
      font-family: sans-serif
      margin-top: 20px
      padding: 10px 20px
      text-decoration: none
      text-transform: uppercase
      transition 0.3s all ease

      &:hover
        background: #ffffff
        color: #9a8822
